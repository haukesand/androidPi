            android:src="@drawable/wait"
            android:tint="@color/blue" />
</item>
    <item android:state_activated="true">
        <bitmap
            android:layout_width="100dp" android:src="@drawable/wait" android:tint="@color/green"
            />
    </item>
    <item android:layout_width="100dp" android:drawable="@drawable/wait" />
</selector>